<%# if false %>
  <% if current_user.favor?(micropost) %>
    <%= form_for(current_user.favs.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favs.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
<%# end %>
